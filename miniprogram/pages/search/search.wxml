<view>
    <view class="homepage" style="margin: 0 auto; top: 0px;">
        <input type="text" class="input_text" bindtap="goToSearch" placeholder="查一查，发现文都宝藏" />
        <button bindtap="searchLocation" style="width: 200rpx; height: 200rpx;display: flex;align-items: center;justify-content: center;">
            <image src="/images/search.png" alt="search" class="homeicon" style="width: 50rpx; height: 50rpx;" />
        </button>
    </view>
    <view>
        <text>搜索历史：</text>
        <text wx:for="{{searchHistory}}">{{item}}</text>
    </view>
    <view>
        <text>猜你想搜：</text>
        <text wx:for="{{guessWhatToSearch}}">{{item}}               </text>
    </view>
</view>