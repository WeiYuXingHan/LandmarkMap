<view style="width: 366rpx; height: 1379rpx; display: block; box-sizing: border-box">
    <view class="homepage" style="margin: 0 auto; top: 0px;">
        <image src="/images/avatar.png" mode="aspectFill" class="avatar" bindtap="goToAvatar"></image>
        <input type="text" class="input_text" bind:tap="goToSearch" value="{{searchKeyword}}" placeholder="查一查，发现文都宝藏" />
        <button bindtap="searchLocation" style="width: 200rpx; height: 100rpx;display: flex;align-items: center;justify-content: center;">
            <image src="/images/search.png" alt="search" class="homeicon" style="width: 50rpx; height: 50rpx;" />
        </button>
    </view>
    <view class="theMap">
        <map id="theMap" longitude="{{longitude}}" latitude="{{latitude}}" scale="{{scale}}" markers="{{markers}}" bindcontroltap="controlTap" style="position: relative; left: 0rpx; top: 0rpx"></map>
    </view>
</view>