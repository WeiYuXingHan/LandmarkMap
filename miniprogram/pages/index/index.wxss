.container {
  padding: 20rpx;
  position: fixed;
  top: 0;
  text-align: center;
  margin: 0 auto;
}


.homepage {
  top: 0;
  position: absolute;
  justify-content: center;
  align-self: center;
  align-items: center;
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
}

.footer {
  display: flex;
  position: fixed;
  bottom: 0;
}

.box {
  transform: translateZ(-50%);
  display: flex;
  align-items: center;
  width: 25vw;
  height: 8vh;
  flex: 60% 40%;
  height: 100rpx;
  background-color: wheat;
  border-radius: 6rpx;
  box-shadow: 0 0 10rpx #ccc;
}

#theMap {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 100%;
  height: 100vh;
  z-index: -100;
}

.inputbar {
  font-family: 'myfont',sans-serif;
  transform: translateZ(-50%);
  display: flex;
  text-align: center;
  position: relative;
  align-items: center;
  border: 0px solid rgb(255, 85, 0);
  border-radius: 75px;
  background: linear-gradient(180deg,
      rgba(255, 99, 47, 0.904) 21%,
      rgba(245, 214, 214, 0.881) 100%);
  background-blend-mode: normal;
  padding: 10rpx;
  border: 5rpx solid rgb(255, 0, 0);
  border-radius: 50rpx;
  width: 97vw;
  height: 80rpx;
}


.inputbar input {
  padding-left: 30rpx;
  padding-right: 30rpx;
  top: 50%;
}

.input_text {
  font-family: CustomFontFamily;
  width: 90%;
  height: 90%;
  top: 50%;
  border-radius: 10rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.homeicon {
  margin: 0 auto;
  width: 30rpx;
  height: 30rpx;
}

.button_text {
  font-size: 25rpx;
}

.avatar {
  background-color: gray;
  border-radius: 50%;
  width: 80px;
  height: 50px;
}

.icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 50rpx;
}