.container {
  padding: 20rpx;
  position: fixed;
  top: 0;
  text-align: center;
  margin: 0 auto;
}

.homepage {
/*   display: flex;
 */  top: 0;
  position: absolute;
  justify-content: center;
  align-self: center;
  align-items: center;
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
}

.box {
  display: grid;

  width: 100rpx;
  height: 100rpx;
  background-color: green;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #ccc;
}

.input_text {
  background-color: wheat;
  padding: 10rpx;
  border: 5rpx solid rgb(16, 195, 54);
  border-radius: 50rpx;
  width: 600rpx;
  height: 80rpx;
}

.homeicon {
  width: 30rpx;
  height: 30rpx;
}

.search{
  width: 60rpx;
  height: 60rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
}

.title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.top_tip {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 20rpx;
}

