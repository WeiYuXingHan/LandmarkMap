.route {
  display: flex;
  align-items: center;
  justify-content: center;
}

.route_item {
  background-color: aqua;
  background-image: url('https://www.rednanjing.cn/upload/adminredsource/20191016/8108eff071cf5f907404c18c8a529b41.jpg');
  padding: 10px;
  margin: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 600rpx;
  height: 250rpx;
  border-radius: 30rpx;
  position: relative;
}

.collection{
  position: absolute;
  top: 0;
  right: 0;
  width: 120rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  background-color: rgb(255, 0, 0);
  border-radius: 30rpx;
}